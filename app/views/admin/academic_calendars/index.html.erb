<% provide(:title, "学年暦") %>
<div>
  <div class="flex justify-between items-center">
    <h3 class="text-xl font-semibold leading-7 text-white">学年暦</h3>
    <%= link_to(new_admin_academic_calendar_path, class: "text-xl") do %>
      <i class="fa-solid fa-file-import"></i>
    <% end %>
  </div>
</div>
<div class="mt-6 border-t border-gray-100">
  <div class="mt-4">
    <%= month_calendar do |date| %>
      <%= date %>
    <% end %>
  </div>
</div>
</div>
