<% provide(:title, "建物") %>
<div>
  <div class="flex justify-between items-center">
    <h2 class="text-xl font-semibold leading-7 text-white">建物</h2>
  </div>
  <div class="mt-6 pt-6 border-t border-gray-100">
    <%= form_with model: @building, url: admin_buildings_path do |f| %>
      <div class="w-1/4">
        <%= f.label :id, class: "block text-sm font-medium leading-6" %>
        <div className="mt-2">
          <%= f.text_field :id, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
        </div>
      </div>
      <div class="mt-6 w-1/4">
        <%= f.label :place_type, class: "block text-sm font-medium leading-6" %>
        <%= f.select :place_type, Building.place_types.keys.map { |k| [t("enums.building.place_type.#{k}"), k] }, {}, {class: "border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:border-gray-600 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500"} %>
      </div>
      <div class="mt-6">
        <%= f.submit "送信", class: "inline-flex items-center px-4 py-2 text-sm font-semibold bg-blue-400 text-gray-900 rounded-md hover:bg-blue-300 hover:text-gray-100 focus:z-20 focus:outline-offset-0" %>
        <%= link_to "戻る", admin_buildings_path, class: "inline-flex items-center px-4 py-2 text-sm font-semibold bg-gray-100 text-gray-900 rounded-md hover:bg-gray-300 hover:text-gray-100 focus:z-20 focus:outline-offset-0" %>
      </div>
    <% end %>
  </div>
</div>
