<% provide(:title, "時間割") %>
<div>
  <div class="flex justify-between items-center">
    <h2 class="text-xl font-semibold leading-7 text-white">時間割</h2>
  </div>
  <div class="mt-6 pt-6 border-t border-gray-100">
    <%= form_with model: @class_schedule, url: admin_class_schedules_path do |f| %>
      <div class="w-1/4">
        <%= f.label :name, class: "block text-sm font-medium leading-6" %>
        <div className="mt-2">
          <%= f.text_field :name, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
        </div>
      </div>
      <div class="mt-6 w-1/4">
        <%= f.label :start_time, class: "block text-sm font-medium leading-6" %>
        <%= f.time_field :start_time, ignore_date: true, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
      </div>
      <div class="mt-6 w-1/4">
        <%= f.label :end_time, class: "block text-sm font-medium leading-6" %>
        <%= f.time_field :end_time, ignore_date: true, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
      </div>
      <div class="mt-6">
        <%= f.submit "送信", class: "inline-flex items-center px-4 py-2 text-sm font-semibold bg-blue-400 text-gray-900 rounded-md hover:bg-blue-300 hover:text-gray-100 focus:z-20 focus:outline-offset-0" %>
        <%= link_to "戻る", admin_class_schedules_path, class: "inline-flex items-center px-4 py-2 text-sm font-semibold bg-gray-100 text-gray-900 rounded-md hover:bg-gray-300 hover:text-gray-100 focus:z-20 focus:outline-offset-0" %>
      </div>
    <% end %>
  </div>
</div>
