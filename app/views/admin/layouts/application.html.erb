<!DOCTYPE html>
<html>
  <head>
    <title><% yield(:title) %> - KITPortalWalk Admin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <script src="https://kit.fontawesome.com/079cbed0ac.js" crossorigin="anonymous"></script>
    <%= javascript_importmap_tags %>
  </head>
  <body class="bg-gray-800 text-gray-100">
    <% if alert %>
      <div class="bg-red-500 text-white p-4">
        <%= alert %>
      </div>
    <% end %>
    <% if notice %>
      <div class="bg-green-500 text-white p-4">
        <%= notice %>
      </div>
    <% end %>
    <%= render("admin/layouts/header") %>
    <div class="flex h-full py-8">
      <%= render("admin/layouts/drawer") %>
      <main class="flex-1 mx-8">
        <%= yield %>
      </main>
    </div>
    <%= render("layouts/footer") %>
  </body>
</html>
