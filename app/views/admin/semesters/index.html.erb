<% provide(:title, "学期") %>
<div>
  <div class="flex justify-between items-center">
    <h3 class="text-xl font-semibold leading-7 text-white">学期</h3>
    <div>
      <%= link_to(new_admin_semester_path, class: "text-xl") do %>
        <i class="fa-sharp fa-solid fa-plus"></i>
      <% end %>
    </div>
  </div>
  <div class="mt-6 border-t border-gray-100">
    <% @semesters.each do |semester| %>
      <div>
        <div class="flex items-center">
          <div><%= semester.year %></div>
          <div><%= semester.gakki_i18n %></div>
          <div><%= semester.start_date %></div>
          <div><%= semester.end_date %></div>
        </div>
        <div class="">
          <% semester.half_semesters.each do |half_semester| %>
            <div><%= half_semester.season_type_i18n %></div>
            <div><%= half_semester.start_date %></div>
            <div><%= half_semester.end_date %></div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
