<!DOCTYPE html>
<html>
  <head>
    <title><% yield(:title) %> - KITPortalWalk</title>
    <%= render("layouts/head") %>
  </head>
  <body class="bg-sky-950 text-gray-100">
    <% if alert %>
      <div class="bg-red-500 text-white p-4">
        <%= alert %>
      </div>
    <% end %>
    <% if notice %>
      <div class="bg-green-500 text-white p-4">
        <%= notice %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
